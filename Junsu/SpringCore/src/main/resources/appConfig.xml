<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

        <bean id="memberService" class="spring.core.member.service.MemberServiceImpl">

            <constructor-arg name="memberRepository" ref="memberRepository" />
        </bean>
    <bean id="memberRepository" class="spring.core.member.repository.MemoryMemberRepository"/>

    <bean id="orderService" class="spring.core.order.service.OrderServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository"/>
        <constructor-arg name="discountPolicy" ref="discountPolicy"/>
    </bean>

    <bean id="discountPolicy" class="spring.core.discount.service.RateDiscountPolicy"/>
</beans>